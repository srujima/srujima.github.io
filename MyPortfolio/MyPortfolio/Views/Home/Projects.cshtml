<link href="~/Content/bootstrap.css" rel="stylesheet" />
<div id="carousel-generic" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#carousel-generic" data-slide-to="0" class="active" data-interval="3000"></li>
        <li data-target="#carousel-generic" data-slide-to="1" data-interval="3000"></li>
        <li data-target="#carousel-generic" data-slide-to="2" data-interval="3000"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="../Pictures/portfolioscreenshot.png" width="1200" height="315" alt="...">
            <div class="carousel-caption">
                <h3>Caption Text</h3>
            </div>
        </div>
        <div class="item">
            <img src="http://placehold.it/1200x315" alt="...">
            <div class="carousel-caption">
                <h3>Caption Text</h3>
            </div>
        </div>
        <div class="item">
            <img src="http://placehold.it/1200x315" alt="...">
            <div class="carousel-caption">
                <h3>Caption Text</h3>
            </div>
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-generic" role="button" data-slide="prev">
        <span class="fa fa-chevron-left fa-2x col-xs-offset-5" style="padding-top: 70%"></span>
    </a>
    <a class="right carousel-control" href="#carousel-generic" role="button" data-slide="next">
        <span class="fa fa-chevron-right fa-2x col-xs-offset-5" style="padding-top: 70%"></span>
    </a>
</div>
